# ===========================================
# SKY ROCK - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe
# Use pk_test_ and sk_test_ for staging, pk_live_ and sk_live_ for production
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# App URL
# Staging: https://staging.skyrock.com
# Production: https://skyrock.com
NEXT_PUBLIC_APP_URL=https://skyrock.com

# Resend (Email)
RESEND_API_KEY=re_xxxxx
ADMIN_EMAIL=admin@skyrock.com
CONTACT_EMAIL=contact@skyrock.com

# OneBooking Integration (Optional - enable when OneBooking dashboard is ready)
# ONEBOOKING_API_URL=https://db.onebooking.co
# ONEBOOKING_API_KEY=sr_sk_live_xxxxx
# ONEBOOKING_WEBHOOK_SECRET=whsec_xxxxx
# WEBSITE_ID=sky-rock
